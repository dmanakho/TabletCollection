@model IEnumerable<TabletCollection.Models.Student>

<table>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.FullName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ClassOf)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>

            <td>
                @Html.DisplayFor(modelItem => item.FullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ClassOf)
            </td>
            <td>
                @Html.ActionLink("Collect", "Collect", "Collections", new { StudentID = item.ID }, new { @class = "btn btn-primary btn-xs" })
            </td>
        </tr>
    }

</table>
