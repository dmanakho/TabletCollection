@model TabletCollection.Models.Student

@{
    ViewBag.Title = "Add Student";
}

<div class="row well">
    <div class="offset-1 col-1">
        <h2 class="text-primary">Add new student record</h2>
    </div>
    <div class="col-8">
        <p>created by: @User.Identity.Name | current time: @DateTime.Now.ToShortTimeString()</p>
    </div>
</div>

