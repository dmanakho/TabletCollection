@model TabletCollection.ViewModels.CollectionViewModel

@{
    ViewBag.Title = $"Delete {Model.TabletTabletName}";
}
<div class="row well">
    <div class="offset-1 col-1">
        <h2 class="text-danger">
            <span class="glyphicon glyphicon-trash">&nbsp;</span>
            Deleting Collection of: @Model.TabletTabletName
        </h2>
    </div>
    <div class="col-8 text-muted">
        <p>
            collected by: @Model.GetCreatedByUserName collected on: @Model.CreatedOn |
            updated by: @Model.GetUpdatedByUserName updated on: @Model.UpdatedOn
        </p>
    </div>
    <h3 class="text-danger">
        <span class="glyphicon glyphicon-alert">&nbsp;</span>
        Are you sure? The record will be permanently deletes. There is no Undo Action!
    </h3>
</div>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.StudentFullName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.StudentFullName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.TabletTabletName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TabletTabletName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.IsStylus)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.IsStylus)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.IsAC)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.IsAC)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.IsNegligence)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.IsNegligence)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.ChargeNotes)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ChargeNotes)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Comments)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Comments)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-group well well-sm">
            <span class="icon-input-btn">
                <span class="glyphicon glyphicon-trash"></span>
                <input type="submit" value="Delete" class="btn btn-danger" />
            </span>
            <span class="icon-input-btn">
                <span class="glyphicon glyphicon-step-backward"></span>
                @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-default" })
            </span>
        </div>
    }
</div>
