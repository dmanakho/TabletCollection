@model TabletCollection.Models.Tablet

@{
    ViewBag.Title = $"Delete {@Model.TabletName}";
}

<div class="row well">
    <div class="offset-1 col-1">
        <h2 class="text-danger">
            <span class="glyphicon glyphicon-trash">&nbsp;</span>
            Deleting: @Model.TabletName
        </h2>
    </div>
    <div class="col-8 text-muted">
        <p>
            created by: @Model.GetCreatedByUserName created on: @Model.CreatedOn |
            updated by: @Model.GetUpdatedByUserName updated on: @Model.UpdatedOn
        </p>
    </div>
    <h3 class="text-danger">
        <span class="glyphicon glyphicon-alert">&nbsp; </span> 
         Are you sure? The record will be permanently deletes. There is no Undo Action!
    </h3>
</div>

<div>

    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.TabletName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TabletName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.SerialNo)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.SerialNo)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.AssetTag)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.AssetTag)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.IsPurchased)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.IsPurchased)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-group well well-sm">
            <span class="icon-input-btn">
                <span class="glyphicon glyphicon-trash"></span>
                <input type="submit" value="Delete" class="btn btn-danger" />
            </span>
            <span class="icon-input-btn">
                <span class="glyphicon glyphicon-step-backward"></span>
                @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-default" })
            </span>
        </div>
    }
</div>
